@model OzgurWiki.Models.WikiPage
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2>@Model.Title</h2>
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="@Model.Id" />
                    <button type="submit" class="btn btn-primary">Düzenle</button>
                </form>
            </div>
            <div class="col-md-6">
                <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Bu sayfayı silmek istediğinizden emin misiniz?');">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </div>
        </div>
    </div>
    <hr />
    <div>
        @Html.Raw(Model.Content)
    </div>

    <footer class="mt-4 text-muted small">
        Son güncelleme: @Model.LastUpdated
    </footer>
</div>
